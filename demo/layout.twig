<!doctype html>
<html>
<head>
  <title>{{title}}</title>
  <style>
  body {margin:0;padding:0;width:100%;height:100%;font-family:"Helvetica Neue",Helvetica,Arial,sans-serif;background-color:#fff;background-image:-webkit-gradient(radial,50% 50%,0,50% 50%,1000,from(rgba(255,255,255,1.0)),to(rgba(220,220,220,1.0)));background-image:-moz-radial-gradient(50% 50% 90deg,rgba(255,255,255,1.0) 0%,rgba(220,220,220,1.0) 100%);}
  header {padding:120px 200px 0 200px;}
  article {padding:0 200px;}
  h1 {font-weight:100;font-size:5em;margin:0;}
  p,li {font-weight:100;font-size:2em;}
  em {font-style:normal;color:red;}
  footer {margin-top:100px;width:100%;text-align:center;}
  footer p {font-size:1em;}
  </style>
</head>
<body>
  <header><h1><em>{{title}}</em></h1></header>
  <article><p>{{content|raw}}</p></article>
  <footer><p>{{footer|raw}}</p></footer>
</body>
</html>